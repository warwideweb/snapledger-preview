{
  "name": "STASH'D",
  "short_name": "STASH'D",
  "description": "Your smart screenshot stash",
  "start_url": "/snapledger-preview/",
  "display": "standalone",
  "background_color": "#000000",
  "theme_color": "#f97316",
  "orientation": "portrait",
  "icons": [
    {
      "src": "icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "share_target": {
    "action": "/snapledger-preview/?share=true",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [{
        "name": "images",
        "accept": ["image/*"]
      }]
    }
  }
}
